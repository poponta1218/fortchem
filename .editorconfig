# vim: set ft=editorconfig:

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{f90,F90}]
indent_style = space
indent_size = 2
max_line_length = 132

[Makefile]
indent_style = tab
indent_size = 4
max_line_length = 132

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4
max_line_length = 132

[*.toml]
indent_style = space
indent_size = 2
max_line_length = 132
